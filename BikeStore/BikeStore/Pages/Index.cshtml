@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="min-height:80vh;" class="text-center h-100 d-flex align-items-center">
@if (User.Identity.IsAuthenticated)
    {

        <div class="px-4 py-5 my-5 text-center ">
            <img class="d-block mx-auto mb-4" src="img/bikStore_logoimg.png" alt="" width="auto" height="57">
            <h1 class="display-5 fw-bold">BikRIDR</h1>
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">
                    Welcome to BikRIDR, where your cycling journey begins! Discover a wide selection of premium bicycles, gear, and accessories crafted for every rider. Whether you're a seasoned cyclist or just starting out, we've got the perfect bike for you. Explore our range of mountain bikes, road bikes, hybrids, and more, all designed with quality and performance in mind. Join us in pedaling towards your next adventure!
                </p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-area ="" asp-page="/ProductsPage">
                        <button type="button" class="btn button-ridr btn-lg px-4 gap-3">SHOP NOW</button>
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container d-flex justify-content-center text-center align-items-center">

            <main class="form-signin">
                <form class="w-100" method="post" asp-page-handler="Login">
                    <img class="mb-4" src="img/bikStore_logoimg.png" alt="" width="72" height="auto">
                    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                    <div class="form-floating">
                        <input asp-for="Credentials.Mail" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="Credentials.Mail" for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Credentials.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label asp-for="Credentials.Password" for="floatingPassword">Password</label>
                    </div>

                    <div class="form-check text-start my-3">
                        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Remember me
                        </label>
                    </div>
                    <button class="btn button-ridr w-100 py-2" type="submit">Sign in</button>
                    <p class="mt-5 mb-3 text-body-secondary">&copy; 2024</p>
                </form>
            </main>

        </div>

    }
</div>




