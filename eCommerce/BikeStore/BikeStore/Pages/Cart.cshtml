    <div class="row g-5 mb-5">
      <div class="col-md-7 col-lg-6 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="">Your cart</span>
          <span class="badge bg-orange-ridr rounded-pill">@Qnt</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.MyCart.Items)
            {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <img height="100%" src=@item />
                        <h6 class="my-0">@item.Name</h6>
                        <small class="text-muted">Quantity: @item.Quantity</small>
                    </div>
                    <div class="text-end text-muted d-block">
                        
                        @if(item.Quantity == 1) {<div>@item.Price €</div>}
                        else {<div>@item.Quantity x @item.Price €</div>}
                        <div class="btn-group g-4 my-2" role="group" aria-label="btngroup">
                            <form method="post" asp-page-handler="RemoveOneItem" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-sm btn-dark rounded-pill"><i class="bi bi-dash-circle"></i></button>
                            </form>
                            <form method="post" asp-page-handler="RemoveAllOfOneItem" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-sm btn-dark ms-2 rounded-pill"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </li>
                
            }
          
          <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
              <h6 class="my-0">Promo code</h6>
              <small>EXAMPLECODE</small>
            </div>
            <span class="text-success">−$5</span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total (EUR)</span>
            <strong>@Math.Round(Total,2) €</strong>
          </li>
        </ul>

        <form class="card p-2">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Promo code">
            <button type="submit" class="btn btn-secondary">Redeem</button>
          </div>
        </form>

        <div class="form-check my-1">
            <input class="form-check-input" type="checkbox" value="" id="tnc">
            <label class="form-check-label" for="tnc">
                I agree to the <a href="#">terms and conditions</a>
            </label>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="subscribe">
            <label class="form-check-label" for="subscribe">
